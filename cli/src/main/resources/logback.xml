<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} | %-5p | [%thread] %logger{5}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.jboss.weld" level="WARN"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
